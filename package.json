{
  "name": "validatory",
  "version": "0.1.0",
  "authors": [
    {
      "name": "Mikel Tuesta Sanchez",
      "email": "mikeltuesta@gmail.com",
      "homepage": "http://mikeltuesta.com"
    },
    {
      "name": "Beñat Espiña Díaz",
      "email": "benatespina@gmail.com",
      "homepage": "https://benatespina.com"
    }
  ],
  "license": "MIT",
  "description": "A minimal yet powerful form validation library written in modern JavaScript. Zero dependencies!",
  "keywords": [
    "javascript",
    "form-validation",
    "library",
    "validation",
    "form"
  ],
  "main": "dist/es5/index.js",
  "module": "dist/es6/index.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "phoenix": "rimraf node_modules && yarn install",
    "prebuild": "rimraf dist",
    "eslint": "node_modules/.bin/eslint src/js/**/*.js",
    "cs": "yarn eslint",
    "js-bundle": "node_modules/.bin/babel --copy-files --out-dir dist/es5 src",
    "module-bundle": "cp -R src/ dist/es6",
    "build": "yarn prebuild && yarn cs && yarn js-bundle && yarn module-bundle"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^8.0.1",
    "eslint": "^4.7.2",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-class-property": "^1.0.6",
    "eslint-plugin-react": "^7.4.0",
    "rimraf": "^2.5.4"
  }
}
